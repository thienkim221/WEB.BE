@model WEB.BE.Models.Order

@{
    ViewBag.Title = "Chi tiết hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-primary">CHI TIẾT HÓA ĐƠN</h2>

<div class="invoice-box" style="background:#fff; padding:20px; border:1px solid #ccc; border-radius:10px;">
    <h4>Thông tin khách hàng</h4>

    <p><strong>Tên:</strong> @Model.Customer.CustomerName</p>
    <p><strong>Điện thoại:</strong> @Model.Customer.CustomerPhone</p>
    <p><strong>Email:</strong> @Model.Customer.CustomerEmail</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.AddressDelivery</p>

    <hr />

    <h4>Danh sách sản phẩm</h4>
    @Html.Partial("PVOrderDetailList", Model.OrderDetails)

    <hr />
    <h3 class="text-end text-danger">
        Tổng thanh toán: @Model.TotalAmount.ToString("N0") đ
    </h3>
</div>
