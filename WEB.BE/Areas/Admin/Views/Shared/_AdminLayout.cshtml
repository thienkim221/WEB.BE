<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Shopee Style</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <style>
        body {
            background: #f5f5f5;
            font-family: Arial, sans-serif;
        }
        /* Header */
        .admin-header {
            background: #ee4d2d;
            padding: 12px;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .admin-header .search-box input {
                width: 500px;
                padding: 8px;
                border: none;
                border-radius: 3px;
            }

            .admin-header .logo {
                font-size: 22px;
                font-weight: bold;
            }

        /* Sidebar */
        .sidebar {
            width: 230px;
            background: #fff;
            min-height: 100vh;
            float: left;
            border-right: 1px solid #ddd;
            padding-top: 20px;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: #333;
                text-decoration: none;
                font-size: 15px;
            }

                .sidebar a:hover {
                    background: #ffe9e4;
                }

        /* Main content */
        .main-content {
            margin-left: 230px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <div class="admin-header">
        <div class="logo">Shopee Admin</div>

        <div class="search-box">
            <input type="text" placeholder="Tìm kiếm sản phẩm, đơn hàng…" />
        </div>

        <div class="profile">
            @User.Identity.Name |
            <a href="/Account/Logout" style="color:white;">Đăng xuất</a>
        </div>
    </div>

    <div class="sidebar">
        <a href="/Admin/Home">🏠 Dashboard</a>
        <a href="/Admin/Products">📦 Sản phẩm</a>
        <a href="/Admin/Categories">📁 Danh mục</a>
        <a href="/Admin/Orders">🧾 Đơn hàng</a>
        <a href="/Admin/Users">👤 Người dùng</a>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />

            <div class="footer-bottom">
                © 2025 Shopee. Thiên Kim_Thanh Huyền_Thảo Vy.
            </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>

