@model WEB.BE.Models.Order
@{
    ViewBag.Title = "Chi tiết đơn hàng #" + Model.OrderID;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chi tiết đơn hàng #@Model.OrderID</h2>

<p><strong>Ngày đặt:</strong> @Model.OrderDate</p>
<p><strong>Địa chỉ giao:</strong> @Model.ShippingAddress</p>
<p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>

<table class="table table-bordered">
    <tr>
        <th>Sản phẩm</th>
        <th>Giá</th>
        <th>Số lượng</th>
        <th>Tổng</th>
    </tr>

    @foreach (var item in Model.OrderDetails)
    {
        <tr>
            <td>@item.Product.ProductName</td>
            <td>@String.Format("{0:N0} đ", item.UnitPrice)</td>
            <td>@item.Quantity</td>
            <td>@String.Format("{0:N0} đ", item.Quantity * item.UnitPrice)</td>
        </tr>
    }
</table>

<h3 class="text-right">Tổng tiền: @String.Format("{0:N0} đ", Model.TotalAmount)</h3>