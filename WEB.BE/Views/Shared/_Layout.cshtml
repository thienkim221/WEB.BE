@* File: Views/Shared/_Layout.cshtml (Hoặc _CustomerLayout.cshtml) *@
@using WEB.BE.Models.ViewModel
@using System.Web.Security
@using System.Linq
@using System.Web.Caching @* Cần thiết cho Response.Cache *@

@{
    // Buộc trình duyệt không cache file Layout trong quá trình phát triển
    Response.Cache.SetCacheability(HttpCacheability.NoCache);
    Response.Cache.SetNoStore();

    // Lấy thông tin giỏ hàng từ Session
    var cart = Session["Cart"] as WEB.BE.Models.ViewModel.Cart;

    // Khởi tạo PersonalMenuVM và điền dữ liệu
    var pmModel = new PersonalMenuVM
    {
        // QUAN TRỌNG: User.Identity.IsAuthenticated kiểm tra Cookie Forms Auth
        IsLoggedIn = User.Identity.IsAuthenticated,
        // Username lấy từ Forms Identity
        Username = User.Identity.IsAuthenticated ? User.Identity.Name : string.Empty,
        CartCount = 0
    };

    // Nếu giỏ hàng không rỗng thì gán số lượng mặt hàng
    if (cart != null && cart.Items.Any())
    {
        pmModel.CartCount = cart.Items.Sum(i => i.Quantity);
    }

    ViewBag.pmmodel = pmModel;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyStore</title>

    @* Thêm liên kết CSS Bootstrap và Styles *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>

    @* HEADER VÀ THANH ĐIỀU HƯỚNG CHÍNH *@
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                @Html.ActionLink("MEO SHOP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold" })

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* MENU DANH MỤC *@
                        <li class="nav-item">
                            @Html.ActionLink("Danh mục", "ProductList", "Home", null, new { @class = "nav-link" })
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">

                        @* MENU CÁ NHÂN (PERSONAL MENU) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown">
                                @if (pmModel.IsLoggedIn)
                                {
                                    @:Xin chào, @pmModel.Username
                                }
                                else
                                {
                                    @:Tài khoản
                                }
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                @if (pmModel.IsLoggedIn)
                                {
                                    <li>@Html.ActionLink("Thông tin tài khoản", "ProfileInfo", "Account", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Lịch sử mua hàng", "OrderHistory", "Order", null, new { @class = "dropdown-item" })</li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>@Html.ActionLink("Đăng xuất", "Logout", "Account", null, new { @class = "dropdown-item" })</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Đăng ký", "Register", "Account", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "dropdown-item" })</li>
                                }
                            </ul>
                        </li>

                        @* LIÊN KẾT GIỎ HÀNG *@
                        <li class="nav-item">
                            @Html.ActionLink($"Giỏ hàng ({pmModel.CartCount})", "Index", "Cart", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* PHẦN NỘI DUNG CHÍNH (BODY) *@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tên ứng dụng của bạn</p>
        </footer>
    </div>

    @* THƯ VIỆN JAVASCRIPT *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @* ĐẶT LỆNH NÀY ĐỂ GIẢI QUYẾT LỖI HTTPEXCEPTION CŨ VÀ ĐẢM BẢO SCRIPT CUỐI CÙNG *@
    @RenderSection("Scripts", required: false)

</body>
</html>